<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>VGP Vegetable Garden</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<!-- Add various berries from VGP Vegetable Garden as ingredient options for Mousekin Trail Mix recipes -->
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef[contains(defName, "Mousekin_Make_TrailMix")]/ingredients/li[filter/thingDefs[contains(li, "RawBerries")]]/filter/thingDefs</xpath>
					<value>
						<li>Rawblueberry</li>
						<li>Rawcloudberry</li>
						<li>Rawgooseberry</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef[@Name="Mousekin_RecipeTrailMixBase"]/fixedIngredientFilter/thingDefs</xpath>
					<value>
						<li>Rawblueberry</li>
						<li>Rawcloudberry</li>
						<li>Rawgooseberry</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef[@Name="Mousekin_RecipeTrailMixBase"]/defaultIngredientFilter/thingDefs</xpath>
					<value>
						<li>Rawblueberry</li>
						<li>Rawcloudberry</li>
						<li>Rawgooseberry</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>
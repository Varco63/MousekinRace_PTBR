<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<DamageDef>
		<defName>Mousekin_SuicideKnife</defName>
		<label>stab (self-inflicted)</label>
		<workerClass>DamageWorker_Stab</workerClass>
		<externalViolence>true</externalViolence>
		<deathMessage>{0} has committed suicide by stabbing [PAWN_objective]self.</deathMessage>
		<hediff>Stab</hediff>
		<hediffSolid>Crack</hediffSolid>
		<impactSoundType>Slice</impactSoundType>
		<armorCategory>Sharp</armorCategory>
		<stabChanceOfForcedInternal>0.9</stabChanceOfForcedInternal>
		<overkillPctToDestroyPart>0~0.1</overkillPctToDestroyPart>
	</DamageDef>
	
	<DamageDef>
		<defName>Mousekin_SuicidePoison</defName>
		<label>hemlock poisoning (self-inflicted)</label>
		<workerClass>DamageWorker_AddGlobal</workerClass>
		<deathMessage>{0} has committed suicide by ingesting hemlock.</deathMessage>
		<hediff>Mousekin_HemlockPoisoning</hediff>
	</DamageDef>

</Defs>
	<!-- Mousekin bed -->
	
	<ThingDef ParentName="Bed">
		<defName>Mousekin_Bed</defName>
		<label>Mousekin bed</label>
		<description>A soft, plush mattress with a thick blanket and fluffy pillow on a wooden frame, for a single person to rest on.</description>
		<graphicData>
			<texPath>Things/Building/Furniture/Mousekin_Bed</texPath>
			<drawSize>(3,3)</drawSize>
		</graphicData>
		<uiIconScale>0.8</uiIconScale>
		<statBases>
			<!-- slightly better than vanilla beds -->
			<Beauty>2</Beauty>
			<BedRestEffectiveness>1.025</BedRestEffectiveness>
			<Comfort>0.95</Comfort>
			<BirthRitualQualityOffset MayRequire="Ludeon.RimWorld.Biotech">2.5</BirthRitualQualityOffset>
		</statBases>
		<stuffCategories Inherit="false">
			<li>Woody</li>
		</stuffCategories>
		<designationCategory>Mousekin_DesignationCategory</designationCategory>
		<building>
			<paintable>false</paintable>
		</building>
	</ThingDef>
	

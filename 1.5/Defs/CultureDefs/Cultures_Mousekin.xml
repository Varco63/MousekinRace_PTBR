	<CultureDef ParentName="Mousekin_CultureBase">
		<defName>Mousekin_CultureKingdom</defName>
		<label>Traditional Mousekinian</label>
		<description>A feudal agrarian culture resembling Regency-era England, characterized by institutionalised patriarchy, rigid social strata and a deep reverence for flowers.</description>
		<ideoNameMaker MayRequire="Ludeon.RimWorld.Ideology">NamerIdeoMousekinChurch</ideoNameMaker>
		<leaderTitleMaker MayRequire="Ludeon.RimWorld.Ideology">LeaderTitleMaker_MousekinChurch</leaderTitleMaker>
		<festivalNameMaker MayRequire="Ludeon.RimWorld.Ideology">NamerFestivalRustican</festivalNameMaker>
		<iconPath>World/WorldObjects/Expanding/MousekinKingdom</iconPath>
	</CultureDef>

	<CultureDef ParentName="Mousekin_CultureBase">
		<defName>Mousekin_CultureIndyTown</defName>
		<label>Enlightened Mousekinian</label>
		<description>A hardy agrarian culture that embraces egalitarian and democratic ideals.</description>
		<ideoNameMaker MayRequire="Ludeon.RimWorld.Ideology">NamerIdeoMousekinRepublic</ideoNameMaker>
		<leaderTitleMaker MayRequire="Ludeon.RimWorld.Ideology">LeaderTitleMaker_MousekinRepublic</leaderTitleMaker>
		<festivalNameMaker MayRequire="Ludeon.RimWorld.Ideology">NamerFestivalRustican</festivalNameMaker>
		<iconPath>World/WorldObjects/Expanding/MousekinIndyTown</iconPath>
	</CultureDef>

	<CultureDef ParentName="Mousekin_CultureBase">
		<defName>Mousekin_CultureNomad</defName>
		<label>Rodemanian</label>
		<description>A nomadic culture that celebrates wanderlust, generosity and hospitality.</description>
		<ideoNameMaker MayRequire="Ludeon.RimWorld.Ideology">NamerIdeoMousekinNomad</ideoNameMaker>
		<leaderTitleMaker MayRequire="Ludeon.RimWorld.Ideology">LeaderTitleMaker_MousekinNomad</leaderTitleMaker>
		<festivalNameMaker MayRequire="Ludeon.RimWorld.Ideology">NamerFestivalRustican</festivalNameMaker>
		<iconPath>World/WorldObjects/Expanding/MousekinNomads</iconPath>
	</CultureDef>

	<CultureDef ParentName="Mousekin_CultureBase">
		<defName>Mousekin_CultureBrigand</defName>
		<label>Outpawian</label>
		<description>A pragmatic, Social Darwinist culture common amongst rodent gangs that values personal strength, winning at all costs and having the biggest nut stash.</description>
		<ideoNameMaker MayRequire="Ludeon.RimWorld.Ideology">NamerIdeoMousekinBrigands</ideoNameMaker>
		<leaderTitleMaker MayRequire="Ludeon.RimWorld.Ideology">LeaderTitleMaker_MousekinBrigands</leaderTitleMaker>
		<festivalNameMaker MayRequire="Ludeon.RimWorld.Ideology">NamerFestivalRustican</festivalNameMaker>
		<iconPath>World/WorldObjects/Expanding/MousekinBrigands</iconPath>
	</CultureDef>


<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Save Our Ship 2</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<!-- Hide Mousekin ears under EVA helmets -->
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[
						defName="Apparel_SpaceSuitHelmet" or
						defName="Apparel_SpaceSuitHelmetChild" or
						defName="Apparel_SpaceSuitHelmetHeavy"
					]/apparel/tags</xpath>
					<value>
						<li>Mousekin_HideEars</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>
<?xml version="1.0" encoding="utf-8"?>
<Defs>
	
	<ThoughtDef>
		<defName>Humanlike_Thought_AtePoopGiantCavy</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
		<durationDays>1</durationDays>
		<stages>
			<li>
				<label>ate Giant Cavy pellet</label>
				<description>Yuck! I just ate a big lump of poop!</description>
				<baseMoodEffect>-20</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>Humanlike_Thought_AteTrailMix</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
		<durationDays>1</durationDays>
		<stages>
			<li>
				<label>ate Mousekin trail mix</label>
				<description>I guess this tastes nice, but why do Mousekins like it so much?</description>
				<baseMoodEffect>1</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>Humanlike_Thought_DrankChonkoNutBrew</defName>
		<showBubble>true</showBubble>
		<icon>Things/Items/Beverage/DrinkChonkoNutBrew/DrinkChonkoNutBrew_a</icon>
		<durationDays>0.333</durationDays>
		<stages>
			<li>
				<label>drank Chonko nut brew</label>
				<description>Wow, this actually tastes pretty good.</description>
				<baseMoodEffect>1</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>Humanlike_Thought_FlowersPlanted</defName>
		<thoughtClass>Thought_Situational</thoughtClass>
		<workerClass>MousekinRace.ThoughtWorker_FlowersPlanted</workerClass>
		<doNotApplyToQuestLodgers>true</doNotApplyToQuestLodgers>
		<stages>
			<li>
				<label>no flowers planted</label>
				<description>Our beds lay bare and the the soil unturned. There are no new blooms this year...</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
			<li>
				<label>few flowers planted</label>
				<description>Our gardens look so sparse... We've barely planted any new flowers this year.</description>
				<baseMoodEffect>-1</baseMoodEffect>
			</li>
			<li>
				<label>some flowers planted</label>
				<description>Our gardens has sprouted new blooms, but there is plenty of room for more flowers.</description>
				<baseMoodEffect>2</baseMoodEffect>
			</li>
			<li>
				<label>many flowers planted</label>
				<description>Our gardens flourish! The breeze is sweet with the colors and scents of this year's flower beds.</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
			<li>
				<label>plethora of flowers planted</label>
				<description>Such a delightful riot of colors and shapes. Valerian must be smiling upon us for taking good care of this land!</description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>Humanlike_Thought_PrejudicedTowardsMousekins</defName>
		<thoughtClass>Thought_SituationalSocial</thoughtClass>
		<workerClass>MousekinRace.ThoughtWorker_PrejudicedTowardsMousekins</workerClass>
		<validWhileDespawned>true</validWhileDespawned>
		<stages>
			<li>
				<label>prejudiced towards talking mice</label>
				<baseOpinionOffset>-10</baseOpinionOffset>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>Humanlike_Thought_SawNearbyPudgemouse</defName>
		<showBubble>true</showBubble>
		<durationDays>1</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>saw a Pudgemouse</label>
				<description>What a cute little rodent!</description>
				<baseMoodEffect>2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

</Defs>